<%= form_for(@vendor) do |f| %>
  <% if @vendor.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>

      <ul>
        <% @vendor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<h2>Create a vendor!</h2>

<%= form_for(@vendor) do |f| %>

  <%= f.label :name, "Name" %>
  <%= f.text_field :name %> <br><br>

  <%= f.submit %>
<% end %>
